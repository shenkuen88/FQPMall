<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tol_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"
                />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                    <TextView
                        android:id="@+id/goods_info"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:text="内容"
                        android:lines="2"
                        android:textSize="15sp"
                        android:textColor="@color/txt_col"
                        android:ellipsize="end"
                        />

                <LinearLayout
                    android:layout_marginTop="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.0"
                        android:textSize="17sp"
                        android:textColor="@color/app_color"
                        />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/goods_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.0"
                        android:textSize="13sp"
                        android:textColor="@color/register_text_hint"
                        android:layout_alignRight="@+id/goods_price"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_xl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="销量0件"
                    android:textSize="13sp"
                    android:textColor="@color/register_text_hint"
                    android:ellipsize="end"
                    />
                    <Button
                        android:id="@+id/btn_msq"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:text="马上抢"
                        android:textSize="13sp"
                        android:textColor="@color/app_color"
                        android:background="@drawable/pink_rec_4"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
