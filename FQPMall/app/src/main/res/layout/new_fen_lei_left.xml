<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/txt_bg"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:background="@color/bg_col">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="在线教育"
                android:textColor="@color/txt_col"
                />
            <ImageView
                android:id="@+id/icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/i_down"/>
        </LinearLayout>
        <View
            android:id="@+id/sel_line"
            android:layout_width="2dp"
            android:layout_height="52dp"
            android:visibility="gone"
            android:background="@color/app_color"></View>
    </FrameLayout>
    <com.fengqipu.mall.view.MyListView
        android:id="@+id/my_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
    </com.fengqipu.mall.view.MyListView>
</LinearLayout>

