<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/tol_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_ck_ll"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/btn_ck"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_check_bg"
                android:button="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/pxtodp10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"
                />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/goods_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:textColor="@color/txt_col"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/goods_xl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingTop="16dp"
                    android:textColor="@color/register_text_hint"
                    android:textSize="13sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/app_color"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/goods_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/register_text_hint"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
