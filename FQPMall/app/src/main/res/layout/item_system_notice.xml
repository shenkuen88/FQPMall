<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pxtodp460"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp100">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pxtodp40"
            android:layout_centerInParent="true"
            android:background="@drawable/common_gray_bn"
            android:gravity="center"
            android:minWidth="@dimen/pxtodp120"
            android:paddingLeft="@dimen/pxtodp16"
            android:paddingRight="@dimen/pxtodp16"
            android:text="@string/no_data_show_Num"
            android:textSize="@dimen/pxtosp32" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pxtodp20"
        android:layout_marginRight="@dimen/pxtodp20"
        android:background="@drawable/white_rec_no_angle"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pxtodp20"
        android:paddingRight="@dimen/pxtodp20"
        android:paddingBottom="@dimen/pxtodp10"
        android:paddingTop="@dimen/pxtodp20">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp80"
            android:layout_marginRight="@dimen/pxtodp20"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_iv"
                android:layout_width="@dimen/pxtodp180"
                android:layout_height="@dimen/pxtodp180"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg" />

            <TextView
                android:id="@+id/intro_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/pxtodp32"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/no_data_show_long_text"
                android:textColor="@color/register_black_text"
                android:textSize="@dimen/pxtodp34" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@drawable/line_view"
            android:layout_marginTop="@dimen/pxtodp10"
            android:layout_marginBottom="@dimen/pxtodp6"
            android:layout_height="@dimen/pxtodp1"/>
        <RelativeLayout
            android:id="@+id/see_detail_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="查看详情"
                android:textColor="@color/register_black_text"
                android:textSize="@dimen/pxtodp34" />

            <ImageView
                android:id="@+id/address_tv"
                style="@style/right_arrow_iv" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
