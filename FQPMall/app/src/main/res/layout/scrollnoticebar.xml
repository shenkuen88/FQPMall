<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/pxtodp2">


    <ViewFlipper
        android:id="@+id/id_scrollNoticeTitle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:flipInterval="5000"
        android:padding="5.0dip"></ViewFlipper>

    <TextView
        android:id="@+id/right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/pxtodp24"
        android:drawablePadding="@dimen/pxtodp12"
        android:drawableRight="@mipmap/listright_arrow"
        android:gravity="center_vertical"
        android:text="更多"
        android:textColor="@color/txt_nol_col"
        android:textSize="@dimen/pxtosp28" />
</LinearLayout>