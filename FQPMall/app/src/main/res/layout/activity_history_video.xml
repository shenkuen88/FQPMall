<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.acty.video.HistoryVideoActivity">
    <include
        android:id="@+id/common_back"
        layout="@layout/layout_top" />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:background="@color/line" />
        <ListView
            android:id="@+id/his_video_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:divider="@color/line"
            android:dividerHeight="@dimen/pxtodp1"
            android:overScrollMode="never"
            android:scrollbars="none"></ListView>
    <include
        android:id="@+id/no_history"
        layout="@layout/listview_empty"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:background="@color/line" />
    <LinearLayout
        android:id="@+id/btm_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/all_ck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="全选"
            android:gravity="center"
            android:textColor="@color/txt_col"
            android:textSize="15sp"
            android:background="@color/white"
            />
        <View
            android:layout_width="@dimen/pxtodp1"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/line" />
        <TextView
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/txt_nol_col"
            android:textSize="15sp"
            android:background="@color/white"
            />
    </LinearLayout>
</LinearLayout>
