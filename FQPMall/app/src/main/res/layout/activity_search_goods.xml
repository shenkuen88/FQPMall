<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_col"
    tools:context="com.fengqipu.mall.main.acty.search.SearchGoodsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finish_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/pxtodp20"
            android:paddingRight="@dimen/pxtodp10"
            android:src="@mipmap/app_title_back" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/home_top_search"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="搜您想要的商品"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_search_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignRight="@+id/et_search"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:src="@mipmap/ic_search_clear"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_ss"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#4A4A4A"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_zh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="综合排序"
                android:textColor="@color/app_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/btn_xl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="销量"
                android:textColor="#4A4A4A"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btn_jg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/price_original"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btn_sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_arrow_down"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_list_type"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon1_browse"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.fengqipu.mall.view.ScrollBottomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fengqipu.mall.view.RefreshListView
            android:id="@+id/my_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/bg_col"
            android:divider="@color/bg_col"
            android:dividerHeight="1px"
            android:overScrollMode="never"
            android:scrollbars="none"></com.fengqipu.mall.view.RefreshListView>
        <GridView
            android:id="@+id/my_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_col"
            android:horizontalSpacing="3dp"
            android:numColumns="2"
            android:padding="@dimen/pxtodp10"
            android:scrollbars="none"
            android:visibility="gone"
            android:verticalSpacing="5dp"></GridView>
    </LinearLayout>
    </com.fengqipu.mall.view.ScrollBottomScrollView>
    <LinearLayout
        android:id="@+id/sx_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="价格区间"
                    android:layout_marginLeft="15dp"
                    android:textColor="#4a4a4a"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/min_price"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/price_rec"
                        android:gravity="center"
                        android:hint="最低价"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#4a4a4a"
                        android:textColorHint="@color/gray"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="48dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/line"
                        android:layout_gravity="center"></View>
                    <EditText
                        android:id="@+id/max_price"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/price_rec"
                        android:gravity="center"
                        android:hint="最高价"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#4a4a4a"
                        android:textColorHint="@color/gray"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"></View>
                <RelativeLayout
                    android:id="@+id/nick_rl"
                    style="@style/mine_top_select_rl"
                    android:layout_below="@+id/user_name_rl">
                    <TextView
                        style="@style/account_manage_tv"
                        android:text="分类" />
                    <TextView
                        android:id="@+id/fenlei_tv"
                        style="@style/mine_right_arrow_tv"
                        android:drawablePadding="@dimen/pxtodp20"
                        android:drawableRight="@mipmap/listright_arrow"
                        android:text="全部" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_cz"
                    android:layout_width="78dp"
                    android:layout_height="@dimen/pxtodp60"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pxtodp62"
                    android:layout_toLeftOf="@+id/buy_bn"
                    android:background="@drawable/yellow_rec_normal"
                    android:text="重置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/pxtosp26" />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="78dp"
                    android:layout_height="@dimen/pxtodp60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pxtodp62"
                    android:background="@drawable/pink_button"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/pxtosp26" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/transparent_black"
            ></LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
